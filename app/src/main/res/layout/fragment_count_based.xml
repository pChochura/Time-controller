<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <FrameLayout
            android:id="@+id/option1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/option2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/option3"
            app:layout_constrainedWidth="true"
            app:layout_constraintDimensionRatio="1:1"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:padding="10dp">

        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginTop="10dp"
                android:padding="20dp"
                android:tint="@color/colorAccentLight"
                android:src="@drawable/ic_weekdays"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:textColor="@color/colorText1"
                android:text="Default weekdays"/>

    </FrameLayout>

    <FrameLayout
            android:id="@+id/option2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toEndOf="@id/option1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/option4"
            app:layout_constrainedWidth="true"
            app:layout_constraintDimensionRatio="1:1"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:padding="10dp">

        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginTop="10dp"
                android:padding="20dp"
                android:tint="@color/colorPrimary"
                android:src="@drawable/ic_amount"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:textColor="@color/colorText1"
                android:text="Default amount"/>

    </FrameLayout>

    <FrameLayout
            android:id="@+id/option3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/option4"
            app:layout_constraintTop_toBottomOf="@id/option1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constrainedWidth="true"
            app:layout_constraintDimensionRatio="1:1"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:padding="10dp">

        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginTop="10dp"
                android:padding="20dp"
                android:tint="@color/colorTaskDefault"
                android:src="@drawable/circle"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:textColor="@color/colorText1"
                android:text="Color"/>

    </FrameLayout>

    <FrameLayout
            android:id="@+id/option4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toEndOf="@id/option3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/option2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constrainedWidth="true"
            app:layout_constraintDimensionRatio="1:1"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:padding="10dp">

        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginTop="10dp"
                android:padding="20dp"
                android:tint="@color/colorPrimaryDark"
                android:src="@drawable/ic_singly"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:textColor="@color/colorText1"
                android:text="Count singly"/>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>