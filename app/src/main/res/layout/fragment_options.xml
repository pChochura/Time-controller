<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <FrameLayout
            android:id="@+id/optionWeekdays"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_max="196dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/optionColor"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/optionStartTime"
            app:layout_constrainedWidth="true"
            app:layout_constraintDimensionRatio="1:1"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:padding="10dp">

        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginBottom="30dp"
                android:padding="30dp"
                android:tint="@color/colorAccentLight"
                android:src="@drawable/ic_weekdays"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:textColor="@color/colorText1"
                android:text="@string/default_weekdays"/>

    </FrameLayout>

    <FrameLayout
            android:id="@+id/optionColor"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_max="196dp"
            app:layout_constraintStart_toEndOf="@id/optionWeekdays"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/optionDuration"
            app:layout_constrainedWidth="true"
            app:layout_constraintDimensionRatio="1:1"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:padding="10dp">

        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginBottom="30dp"
                android:padding="30dp"
                android:tint="@color/colorTaskDefault"
                android:src="@drawable/ic_circle"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:textColor="@color/colorText1"
                android:text="@string/color"/>

    </FrameLayout>

    <FrameLayout
            android:id="@+id/optionStartTime"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_max="196dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/optionDuration"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constrainedWidth="true"
            app:layout_constraintDimensionRatio="1:1"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:padding="10dp">

        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginBottom="30dp"
                android:padding="30dp"
                android:tint="@color/colorPrimary"
                android:src="@drawable/ic_time"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:textColor="@color/colorText1"
                android:text="@string/default_start_time"/>

    </FrameLayout>

    <FrameLayout
            android:id="@+id/optionDuration"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_max="196dp"
            app:layout_constraintStart_toEndOf="@id/optionStartTime"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/optionColor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constrainedWidth="true"
            app:layout_constraintDimensionRatio="1:1"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:padding="10dp">

        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginBottom="30dp"
                android:padding="30dp"
                android:tint="@color/colorPrimaryDark"
                android:src="@drawable/ic_duration"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:textColor="@color/colorText1"
                android:text="@string/default_duration"/>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>