<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/textTaskName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@android:color/transparent"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@color/colorText1"
            android:hint="@string/text_task_name"/>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <FrameLayout
                android:id="@+id/optionWeekdays"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth_max="196dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/optionStartTime"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/optionColor"
                app:layout_constrainedWidth="true"
                app:layout_constraintDimensionRatio="1:1"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="10dp">

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:layout_gravity="top|center_horizontal"
                    android:layout_marginTop="10dp"
                    android:padding="20dp"
                    android:tint="@color/colorAccentLight"
                    android:src="@drawable/ic_weekdays"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:textColor="@color/colorText1"
                    android:text="@string/default_weekdays"/>

        </FrameLayout>

        <FrameLayout
                android:id="@+id/optionStartTime"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth_max="196dp"
                app:layout_constraintStart_toEndOf="@id/optionWeekdays"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/optionDuration"
                app:layout_constrainedWidth="true"
                app:layout_constraintDimensionRatio="1:1"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="10dp">

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:layout_gravity="top|center_horizontal"
                    android:layout_marginTop="10dp"
                    android:padding="20dp"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/ic_time"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:textColor="@color/colorText1"
                    android:text="@string/default_start_time"/>

        </FrameLayout>

        <FrameLayout
                android:id="@+id/optionColor"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth_max="196dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/optionDuration"
                app:layout_constraintTop_toBottomOf="@id/optionWeekdays"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constrainedWidth="true"
                app:layout_constraintDimensionRatio="1:1"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="10dp">

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:layout_gravity="top|center_horizontal"
                    android:layout_marginTop="10dp"
                    android:padding="20dp"
                    android:tint="@color/colorTaskDefault"
                    android:src="@drawable/circle"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:textColor="@color/colorText1"
                    android:text="@string/color"/>

        </FrameLayout>

        <FrameLayout
                android:id="@+id/optionDuration"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth_max="196dp"
                app:layout_constraintStart_toEndOf="@id/optionColor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/optionStartTime"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constrainedWidth="true"
                app:layout_constraintDimensionRatio="1:1"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="10dp">

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:layout_gravity="top|center_horizontal"
                    android:layout_marginTop="10dp"
                    android:padding="20dp"
                    android:tint="@color/colorPrimaryDark"
                    android:src="@drawable/ic_duration"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:textColor="@color/colorText1"
                    android:text="@string/default_duration"/>

        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:textAppearance="@style/ButtonText"
            android:backgroundTint="@color/colorPrimaryDark"
            app:cornerRadius="0dp"
            android:insetBottom="0dp"
            android:insetTop="0dp"
            android:textColor="@color/colorText3"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:text="@string/save"/>

</LinearLayout>